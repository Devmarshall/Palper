{
  "extends": ["airbnb-base"],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 8
  },
  "env": {
    "node": true,
    "es6": true
  },
  "rules": {
    "max-len": [
      0,
      200,
      2
    ],
    "no-tabs": "off",
    "no-console": "error",
    "no-underscore-dangle": "error",
    "global-require": "off",
    "func-names": "off",
    "no-param-reassign": "off",
    "import/no-unresolved": "off",
    "comma-dangle": [
      "error",
      "always-multiline",
      {
        "functions": "never"
      }
    ]
  }
}
